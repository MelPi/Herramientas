%		mama(Mama,De).						     
%		hijo(Hijo,De).						     
%		hija(Hija,De).						     
%		hijos(Hijos,De)						     
%		hermano(Hermano,De)					     
%											     
%		hermana(Hermana,De)					     
%											     
%		hermanos(Hermanos,De)				     
%											     
%											     
%		abuelo(Abuelo,De).					     
%											     
%		abuela(Abuela,De).					     
%											     
%		abuelos(Abuelos,De).				     
%		bisabuelo(Bisabuelo,De).			     
%											     
%		bisabuela(Bisabuela,De).			     
%											     
%		bisabuelos(Bisabuelos,De).			     
%		bisnietos(Bisnietos,De).			     
%		nieto(Nieto,De).					     
%		nieta(Nieta,De).					     
%		nietos(Nietos,De).					     
%		tio(Tio,De).						     
%											     
%	    tia(Tia,De).						     
%		tios(Tios,De).						     
%		xmayores_a_60_años(Nombre,Edad).		     
%											     
%		menores_de_3_años(Nombre,Edad).		     
%											     
%		edad_entre_20_y_30_años(Nombre,Edad).	 
%											     
%		fallecidos(Nombre).					     
%											     
%		pareja(Pareja,De).					     
%		casados(Estan_casados).				     
%		viudos(Viudao).						     
%		huerfanos_de_madre(Es_huerfano).	   
%											     
%		huerfanos_de_padre(Es_huerfano).	     
%											     
%		huerfanos_de_padre(Es_huerfano).	     
%		sobrino(Sobrino,De).				     
%											     
%		sobrina(Sobrina,De).				     
%											     
%		sobrinos(Sobrinos,De).				     
%		cuniada(Cuniada,De).				     
%											     
%		cuniado(Cuniado,De).				     
%											     
%		cuniados(Cuniados,De).				     
%		suegro(Suegro,De).					     
%											     
%		suegra(Suegra,De).					     
%		suegros(Suegros,De).				     
%		yerno(Yerno,De).					     
%												 
%		nuera(Nuera,De).					     
%											     
%		primo(Primo,De).					     
%											     
%		prima(Prima,De).					     
%											     
% 	primos(Es_primo,De).				     
%		solteros(Son_solteros).				     
%		divorciados(Son_divorciados).		     
%/***╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗****╔══╦═╦╗╔═╦╗***/
