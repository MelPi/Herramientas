<?php
	$accesos=1;
	if(isset($_COOKIE['num_accesos']))
	{
		$accesos=$_COOKIE['num_accesos']+1;
	}
	setcookie("num_accesos",$accesos,time()+60);
?>

<html>
<head>
<title> DATOS DEL USUARIO</title>
